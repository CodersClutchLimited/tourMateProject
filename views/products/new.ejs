<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Form</title>
</head>

<body>
    <h1>Product Form</h1>
    <form action="/products" method="POST" enctype="multipart/form-data">
        <label for="name">Product Name:</label><br>
        <input type="text" id="name" name="name" required><br><br>

        <label for="description">Description:</label><br>
        <input type="text" id="description" name="description" required><br><br>

        <label for="brand">Brand:</label><br>
        <input type="text" id="brand" name="brand" required><br><br>

        <label for="color">Color:</label>
        <input type="text" id="color" name="color[]" placeholder="Enter color" required><br>

        <div id="additionalColors">
            <button type="button" onclick="addColorField()">Add another color</button>
        </div>

        <label for="storageSize">Storage Size:</label><br>
        <input type="text" id="storageSize" name="storageSize" required><br><br>

        <label for="price">Price:</label><br>
        <input type="number" id="price" name="price" required><br><br>

        <label for="salePrice">Sale Price (Optional):</label><br>
        <input type="number" id="salePrice" name="salePrice"><br><br>

        <label for="quantity">Quantity:</label><br>
        <input type="number" id="quantity" name="quantity" required><br><br>

        <label for="sku">SKU:</label><br>
        <input type="text" id="sku" name="sku" required><br><br>

        <label for="category">Category:</label><br>
        <select id="category" name="category" required>
            <option value="computers">Computers</option>
            <option value="smartphones">Smartphones</option>
            <option value="watches">Watches</option>
            <option value="tv">TV</option>
            <option value="tablets">Tablets</option>
            <option value="gaming">Gaming</option>
        </select><br><br>

        <button type="submit">Submit</button>
    </form>

    <script>
        function addColorField() {
            const container = document.getElementById('additionalColors');
            const newInput = document.createElement('input');
            newInput.type = 'text';
            newInput.name = 'color[]'; // Use 'color[]' to indicate this is an array
            newInput.placeholder = 'Add another color';
            container.appendChild(newInput);
        }
    </script>
</body>

</html>