<% layout('layouts/boilerplate') %>
<div class="container d-flex justify-content-center align-items-center mt-1 mb-5">
    <div class="col-md-6 col-xl-4">
        <div class="card shadow">
            <img src="https://img.freepik.com/free-vector/camping-area-landscape-concept_23-2148670950.jpg" alt="" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">Login</h5>
                <form action="/login" class="validated-form" novalidate method="POST">
                    <div class="mb-3">
                        <label class="form-label" for="email">Username</label>
                        <input class="form-control" type="username" id="username" name="username" required autofocus>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="password">Password</label>
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success w-100">Login</button>
                </form>
    
            </div>
        </div>
    </div>
</div>
